<GridLayoutExample@GridLayout>:
    #rows
    #cols
    #cols: 3
    rows: 2
    Button:
        text: "A"
        size_hint: .5, .1
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: .5, .1
